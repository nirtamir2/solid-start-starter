{
  "root": true,
  "extends": [
    "nirtamir2",
    "nirtamir2/recommended",
    "nirtamir2/typescript",
    "nirtamir2/solid",
    "nirtamir2/security",
    "nirtamir2/i18n"
  ],
  "overrides": [
    {
      "files": ["vite.config.ts"],
      "rules": {
        "import/no-unused-modules": "off"
      }
    },
    {
      "files": ["routes.d.ts"],
      "rules": {
        "etc/no-misused-generics": "off",
        "etc/prefer-interface": "off",
        "@typescript-eslint/sort-type-union-intersection-members": "off"
      }
    }
  ]
}
